<Page class="page" navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar title="Notes and tasks" class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
        <ActionItem tap="searchBarToggle">
            <Label class="" style="padding:20px;font-size:30px;color:white;font-family:FontAwesome;vertical-align: top;" text="&#xf002;"></Label>
        </ActionItem>
    </ActionBar>

    <StackLayout>
        <SearchBar row="0" col="0" loaded="searchbarLoaded" visibility="{{ showSearch ? 'visible' : 'collapsed' }}" id="searchBar" hint="Search by typing here..." text="" clear="onSearchClear" submit="onSearchSubmit" />
        <ListView row="1" col="1" items="{{ filteredNotesList }}" itemTap="onNotesListItemTap" separatorColor="gray" rowHeight="auto" id="listView">
            <ListView.itemTemplate>
                <DockLayout stretchLastChild="false" class="list-view-item p-15" id="{{ uuid }}">
                    <Image dock="left" src="~/images/assetti.jpg" height="40" stretch="aspectFit" class="img-rounded"></Image>
                    <StackLayout orientation="vertical" class="p-l-15 p-r-15">
                        <Label class="font-weight-bold" text="{{ title || 'undefined'}}" textWrap="true"></Label>
                        <Label text="{{ author || 'undefined' }}" textWrap="true"></Label>
                    </StackLayout>
                    <StackLayout dock="right" orientation="horizontal">
                        <Label text="{{ comments.length }}"></Label>
                        <Label class="entypo m-l-10" text="&#xea18;"></Label>
                    </StackLayout>
                </DockLayout >
            </ListView.itemTemplate>
        </ListView>


        <!--  <Button tap="goToAdd" text="&#xf067;" class="roundbutton fa"/> -->


    </StackLayout>

</Page>
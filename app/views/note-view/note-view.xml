<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar title="View Note" class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
    </ActionBar>

    <!-- 
    Title: Tenant Alterations for Assetti Oy
    Creator&Date: Samuli Hiltunen, 13.03.2019
    Property: KOy Askonneliö
    Tenant: Assetti Oy

    {{ titleSource }} {{ ownerSource }} {{ cdateSource }} {{ propertySource }} {{ tenantSource }}
    -->
    <StackLayout orientation="vertical" backgroundColor="#FFFFFF">
        <GridLayout class="header" columns="auto, auto" rows="auto, auto, auto" height="25%" backgroundColor="#2DB7E6">
            <Label class="hl1" text="Tenant Alterations for Assetti Oy" row="0" col="0" colSpan="2"/>
            <Label class="hl2" id="subtitle" text="Samuli Hiltunen, 13.03.2019" row="1" col="0" colSpan="2"/>
            <DockLayout row="2" col="0">
                <Label class="entypo" text="&#xe9b8;" style="margin-right: 6pt;" /> 
              
                <Label class="hl2" text="KOy Askonneliö" />
            </DockLayout>
            <DockLayout row="2" col="1">
                 <Label class="entypo" text="&#xea26;" style="margin-right: 6pt;" /> 
               
                <Label class="hl2" text="Assetti Oy" />
            </DockLayout>
        </GridLayout>
        <DockLayout class="descbox" height="60%" backgroundColor="#FFFFFF" stretchLastChild="false">
            <!-- editable="{{ editState }}" text="{{ descText }}" -->
            <!-- <TextView loaded="descShow" class="description" editable="false" text="Customer is hoping to remove the glass wall between open area and negotiation room.

Contractor said that it will take 2 weeks and will cost 2500€." hint="Description" textWrap="true" dock="top" /> -->
            <TextView class="description" text="{{ descSource }}" hint="Description" textWrap="true" dock="top" />
            <StackLayout class="attachments" dock="bottom">
                <Label text="ATTACHMENTS" />
            </StackLayout>
        </DockLayout>
        <GridLayout class="footer" row="1" columns="*,auto,*">
            <Button col="0" text="BACK" class="btn" tap="onBackTap" id="backButton"/>
            <Button col="1" tap="onTakePictureTap" text="&#xe9ba;" class="roundbutton-entypo"/>
            <Button col="2" text="NEXT" class="btn" tap="changeTab" id="nextButton"/>
        </GridLayout>
    </StackLayout>

</Page>
